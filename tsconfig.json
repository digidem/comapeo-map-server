{
	"extends": "@tsconfig/node18/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,

		"strict": true,
		"noImplicitOverride": true,
		"forceConsistentCasingInFileNames": true,

		"skipLibCheck": true,

		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["**/*"],
	"exclude": ["node_modules", "dist"]
}
